<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">
  <Properties>
    <!-- Eclipseでフォーマット改行させないためにCDATAセクションに -->
    <Property name="pattern"><![CDATA[%date{yyyy-MM-dd HH:mm:ss.SSS}\t%level\t[%mdc{userId}]\t[%mdc{logName}]\t%mdc{requestId}\t%c{2}\t%m%n]]></Property>
    <!-- JDBC関連ログをAOPでlogNameを設定したい。とりあえずはAppenderを分けてフォーマットを分ける -->
    <Property name="pattern_jdbc"><![CDATA[%date{yyyy-MM-dd HH:mm:ss.SSS}\t%level\t[%mdc{userId}]\t[JDBC]\t%mdc{requestId}\t%c{2}\t%m%n]]></Property>
    <Property name="catalina_home">/opt/tomcat</Property>
    <Property name="app_id">csf-test-app</Property>
  </Properties>
  <Appenders>
    <Console
      name="console"
      target="SYSTEM_OUT"
    >
      <PatternLayout pattern="${pattern}" />
    </Console>
    <RollingFile
      name="${app_id}"
      fileName="${catalina_home}/logs/${app_id}.log"
      filePattern="${catalina_home}/logs/archive/${app_id}_%d{yyyy-MM-dd}.gz"
    >
      <PatternLayout
        pattern="${pattern}"
        charset="UTF-8" />
      <Policies>
        <TimeBasedTriggeringPolicy />
      </Policies>
    </RollingFile>
    <RollingFile
      name="${app_id}_jdbc"
      fileName="${catalina_home}/logs/${app_id}.log"
      filePattern="${catalina_home}/logs/archive/${app_id}_%d{yyyy-MM-dd}.gz"
    >
      <PatternLayout
        pattern="${pattern_jdbc}"
        charset="UTF-8" />
      <Policies>
        <TimeBasedTriggeringPolicy />
      </Policies>
    </RollingFile>
    <RollingFile
      name="error"
      fileName="${catalina_home}/logs/csf_error.log"
      filePattern="${catalina_home}/logs/archive/csf_error_%d{yyyy-MM-dd}.gz"
    >
      <PatternLayout
        pattern="${pattern}"
        charset="UTF-8" />
      <Policies>
        <TimeBasedTriggeringPolicy />
      </Policies>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger
      name="com.csframe"
      level="debug"
    >
      <AppenderRef ref="${app_id}" />
      <AppenderRef
        ref="error"
        level="warn" />
    </Logger>
    <Logger
      name="jp.cstudio"
      level="debug"
    >
      <AppenderRef ref="${app_id}" />
      <AppenderRef
        ref="error"
        level="warn" />
    </Logger>
    <Logger
      name="jdbc.connection"
      level="warn"
      additivity="false"
    >
      <AppenderRef ref="${app_id}_jdbc" />
    </Logger>
    <Logger
      name="jdbc.sqltiming"
      level="debug"
      additivity="false"
    >
      <AppenderRef ref="${app_id}_jdbc" />
    </Logger>
    <Logger
      name="jdbc.sqlonly"
      level="error"
      additivity="false"
    >
      <AppenderRef ref="${app_id}_jdbc" />
    </Logger>
    <Logger
      name="jdbc.audit"
      level="warn"
      additivity="false"
    >
      <AppenderRef ref="${app_id}_jdbc" />
    </Logger>
    <Logger
      name="jdbc.resultset"
      level="warn"
    >
      <AppenderRef ref="${app_id}_jdbc" />
    </Logger>
    <Root level="info">
      <AppenderRef ref="console" />
    </Root>
  </Loggers>
</Configuration>